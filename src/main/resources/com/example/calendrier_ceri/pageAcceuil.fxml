<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<AnchorPane fx:id="acceuilPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calendrier_ceri.PageAcceuilController" styleClass="style">
    <children>
        <VBox alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" spacing="20" styleClass="login-vbox">
            <Label text="Calendar" styleClass="title-label" />
            <HBox alignment="CENTER" spacing="10">
                <Label text="Pseudo:" styleClass="label" minWidth="100" />
                <TextField fx:id="pseudoField" styleClass="text-field" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label text="Mot de passe:" styleClass="label" minWidth="100" />
                <PasswordField fx:id="passwordField" styleClass="password-field" />
            </HBox>
            <Button mnemonicParsing="false" text="Connexion" onAction="#connexionAction" styleClass="button" />
            <Button mnemonicParsing="false" text="Dark" onAction="#dark_mode" styleClass="button" />
        </VBox>
    </children>
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
</AnchorPane>
